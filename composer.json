{
	"name": "shift31/hostbase",
	"description": "A host information database",
	"license": "MIT",
	"require": {
        "php": "5.4.*",
		"laravel/framework": "4.1.*",
        "barryvdh/laravel-ide-helper": "1.*",
        "shift31/laravel-basement": "dev-master",
        "shift31/laravel-elasticsearch": "dev-master",
		"symfony/yaml": "2.3.x-dev",
		"league/fractal": "0.7.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
        "psr-0": {
            "Hostbase": "app/lib"
        }
	},
	"scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize",
            "php artisan ide-helper:generate"
        ],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev",
    "prefer-stable": true
}
