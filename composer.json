{
	"name": "shift31/hostbase",
	"description": "A host information database",
	"license": "MIT",
	"require": {
		"laravel/framework": "4.0.*",
        "barryvdh/laravel-ide-helper": "1.*",
        "shift31/laravel-basement": "dev-master",
        "monolog/monolog": "1.6.x-dev as 1.5.0",
		"elasticsearch/elasticsearch": "~0.4"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
        "psr-0": {
            "Hostbase": "app/lib"
        }
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
            "php artisan ide-helper:generate",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
