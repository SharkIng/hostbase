{
    "name": "shift31/hostbase",
    "description": "A highly scalable host and network database with full-text search and a RESTful API",
    "license": "MIT",
    "require": {
        "php": ">=5.4",
        "laravel/framework": "4.2.*",
        "barryvdh/laravel-ide-helper": "1.*",
        "shift31/laravel-basement": "dev-master",
        "shift31/laravel-elasticsearch": "1.0.*@dev",
        "symfony/yaml": "2.3.x-dev",
        "league/fractal": "0.9.*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "mockery/mockery": "0.9.*@dev",
        "phpspec/phpspec": "2.0.*@dev"
    },
    "autoload": {
        "classmap": [
            "app/controllers",
            "app/models",
            "app/tests/TestCase.php"
        ],
        "psr-4": {
            "Hostbase\\": "app/src"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize",
            "php artisan ide-helper:generate"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize",
            "php artisan ide-helper:generate"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    }
}
